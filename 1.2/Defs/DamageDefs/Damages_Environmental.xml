<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ==================== Laser ========================== -->
  <DamageDef ParentName="Bomb">
    <defName>Mech_Laser</defName>
    <label>concentrated energy</label>
    <workerClass>Firecracker.DamageWorker_BombNoCamShake</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} was ripped apart in a microexplosion.</deathMessage>
    <hediff>Shredded</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Blunt</armorCategory>
    <minDamageToFragment>10</minDamageToFragment>
    <defaultDamage>10</defaultDamage>
    <defaultStoppingPower>0.1</defaultStoppingPower>
    <defaultArmorPenetration>0.01</defaultArmorPenetration>
    <buildingDamageFactor>2</buildingDamageFactor>
    <plantDamageFactor>3</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellMote>Mote_BlastDry</explosionCellMote>
    <explosionColorCenter>(0.5, 0.1, 0.1)</explosionColorCenter>
    <explosionColorEdge>(0.7, 0.4, 0.2)</explosionColorEdge>
    <soundExplosion>Explosion_Bomb</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
  </DamageDef>
  <!-- ==================== Devastator ========================== -->
  <DamageDef>
    <defName>Mech_Icecloud</defName>
    <label>frostburn</label>
    <workerClass>DamageWorker_Frostbite</workerClass>
    <externalViolence>false</externalViolence>
    <deathMessage>{0} has succumbed to frostbite.</deathMessage>
    <hediff>Frostbite</hediff>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <canUseDeflectMetalEffect>true</canUseDeflectMetalEffect>
  </DamageDef>
  <!-- ==================== Blaster ========================== -->
  <DamageDef ParentName="Flame">
    <defName>Mech_Inferno</defName>
    <workerClass>DamageWorker_Flame</workerClass>
    <label>inferno</label>
    <hasForcefulImpact>true</hasForcefulImpact>
    <!-- false -->
    <deathMessage>{0} has burned to death in an inferno.</deathMessage>
    <minDamageToFragment>10</minDamageToFragment>
    <defaultDamage>15</defaultDamage>
    <defaultArmorPenetration>0.05</defaultArmorPenetration>
    <explosionHeatEnergyPerCell>10</explosionHeatEnergyPerCell>
    <explosionCellMote>Mote_BlastFlame</explosionCellMote>
    <explosionColorCenter>(1, 0.7, 0.7)</explosionColorCenter>
    <explosionColorEdge>(1, 0.4, 0.5)</explosionColorEdge>
    <soundExplosion>Explosion_Flame</soundExplosion>
    <canUseDeflectMetalEffect>true</canUseDeflectMetalEffect>
  </DamageDef>
  <!-- ==================== Multi Burst ========================== -->
  <DamageDef ParentName="Arrow">
    <defName>Mech_Shredder</defName>
    <label>shredder</label>
    <deathMessage>{0} has been sieved through to death.</deathMessage>
  </DamageDef>
</Defs>
